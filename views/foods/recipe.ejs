<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= food.title %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
