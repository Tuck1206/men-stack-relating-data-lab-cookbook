<!-- applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/_navbar.ejs') %>
        <title>Your Recipes</title>
</head>

<body>
    <h1>Your Recipes</h1>
    <ul>
        <% foods.forEach((food)=>{ %>
            <li>
                <a href="/users/<%= user._id %>/foods/<%= food._id %>">
                    <%= food.title %>
                </a>
            </li>
        <% }) %>
    </ul>
</body>

</html>