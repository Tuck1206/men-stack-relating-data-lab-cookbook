<!-- views/applications/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editing <%= food.title %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Edit <%= food.title %> </h1>
  <form
   action="/users/<%= user._id %>/foods/<%= food._id %>?_method=PUT"
  method="POST"
  >
     <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= food.title %>">
    >
    <label for="ingredents">Ingredents:</label>
    <textarea name="ingredents" id="ingredents"><%= food.ingredents %></textarea>

    <label for="notes">Notes:</label>
    <textarea name="notes" id="notes"><%= food.notes %></textarea>

    <button type="submit">Update Application</button>
  </form>
</body>
</html>
